<Window x:Class="KhTracker.BroadcastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KhTracker"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="Broadcast Window"
        Height="680" Width="500"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged"
        Closing="BroadcastWindow_Closing"
        MinHeight="340" MinWidth="250" Background="#303030">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height=".25*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Worlds -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width=".2*"/>
                </Grid.ColumnDefinitions>

                <!-- Sora's Heart -->
                <Grid Margin="5" Grid.Row="0" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/sora's_level.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="SorasHeartFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="SorasHeartTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Drive Forms -->
                <Grid Margin="5" Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/drive_form.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="DriveFormsFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="DriveFormsTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Hollow Bastion -->
                <Grid Margin="5" Grid.Row="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/hollow_bastion.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid  Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="HollowBastionFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="HollowBastionTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Twilight Town -->
                <Grid Margin="5" Grid.Row="0" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/twilight_town.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="TwilightTownFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="TwilightTownTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Land of Dragons -->
                <Grid Margin="5" Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/land_of_dragons.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="LandofDragonsFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="LandofDragonsTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Beasts Castle -->
                <Grid Margin="5" Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/beast's_castle.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="BeastsCastleFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="BeastsCastleTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Olympus Coliseum -->
                <Grid Margin="5" Grid.Row="1" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/olympus_coliseum.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="OlympusColiseumFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="OlympusColiseumTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Space Paranoids -->
                <Grid Margin="5" Grid.Row="1" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/space_paranoids.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="SpaceParanoidsFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="SpaceParanoidsTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Halloween Town -->
                <Grid Margin="5" Grid.Row="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/halloween_town.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="HalloweenTownFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="HalloweenTownTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Port Royal -->
                <Grid Margin="5" Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/port_royal.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="PortRoyalFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="PortRoyalTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Agrabah -->
                <Grid Margin="5" Grid.Row="2" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/agrabah.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="AgrabahFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="AgrabahTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Pride Lands -->
                <Grid Margin="5" Grid.Row="2" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/pride_land.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="PrideLandsFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="PrideLandsTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Disney Castle -->
                <Grid Margin="5" Grid.Row="3" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/disney_castle.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="DisneyCastleFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="DisneyCastleTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- 100 Acre Wood -->
                <Grid Margin="5" Grid.Row="3" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/100_acre_wood.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="HundredAcreWoodFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="HundredAcreWoodTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- Simulated Twilight Town -->
                <Grid Margin="5" Grid.Row="3" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/simulated_twilight_town.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="SimulatedTwilightTownFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="SimulatedTwilightTownTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>

                <!-- TWTNW -->
                <Grid Margin="5" Grid.Row="3" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>

                    <Image Source="Images/Simple/the_world_that_never_was.png" Grid.RowSpan="2" Grid.ColumnSpan="2"></Image>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".6*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Images/Zero.png" Name="TWTNWFound" Grid.Column="0"/>
                        <Image Source="/Images/Bar.png" Grid.Column="1"/>
                        <Image Source="/Images/QuestionMark.png" Name="TWTNWTotal" Grid.Column="2"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Reports and Torn Pages -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Reports -->
                <Grid Name="Reports" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".3*"/>
                        <ColumnDefinition Width=".8*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Content="{DynamicResource AnsemReport}" Name="Report" Grid.RowSpan="3" Grid.Column="1"/>
                    <Image Source="Images/zero.png" Name="ReportFound" Grid.Row="1" Grid.Column="2"/>
                    <Image Source="Images/bar.png" Grid.Row="1" Grid.Column="3"/>
                    <Image Source="Images/thirteen.png" Grid.Row="1" Grid.Column="4"/>
                </Grid>

                <!-- Torn Pages -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width=".8*"/>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".2*"/>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Content="{DynamicResource TornPage}" Name="TornPage" Grid.RowSpan="3" Grid.Column="1"/>
                    <Image Source="Images/zero.png" Name="TornPageFound" Grid.Row="1" Grid.Column="2"/>
                    <Image Source="Images/bar.png" Grid.Row="1" Grid.Column="3"/>
                    <Image Source="Images/five.png" Grid.Row="1" Grid.Column="4"/>
                </Grid>
            </Grid>

            <!-- Important Checks -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Proofs, Promise Charm, Once More, Second Chance -->
                <Grid Name="ProofRow" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="4.4*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Content="{DynamicResource ProofOfPeace}" Opacity="0.25" Name="Peace" Grid.Row="1" Grid.Column="0"/>
                    <ContentControl Content="{DynamicResource ProofOfNonexistence}" Opacity="0.25" Name="Nonexistence" Grid.Row="1" Grid.Column="1"/>
                    <ContentControl Content="{DynamicResource ProofOfConnection}" Opacity="0.25" Name="Connection" Grid.Row="1" Grid.Column="2"/>
                    <ContentControl Content="{DynamicResource PromiseCharm}" Opacity="0.25" Name="PromiseCharm" Grid.Row="1" Grid.Column="3"/>
                    <ContentControl Content="{DynamicResource OnceMore}" Opacity="0.25" Name="OnceMore" Grid.Row="1" Grid.Column="4"/>
                    <ContentControl Content="{DynamicResource SecondChance}" Opacity="0.25" Name="SecondChance" Grid.Row="1" Grid.Column="5"/>
                </Grid>

                <!-- Magic -->
                <Grid Name="MagicRow" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Fire -->
                    <Grid Margin="5" Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{DynamicResource Fire}" Opacity="0.25" Name="Fire" Grid.RowSpan="2" Grid.ColumnSpan="2"></ContentControl>
                        <Image Name="FireFound" Grid.Row="1" Grid.Column="1"></Image>
                    </Grid>
                    
                    <!-- Blizzard -->
                    <Grid Margin="5" Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{DynamicResource Blizzard}" Opacity="0.25" Name="Blizzard" Grid.RowSpan="2" Grid.ColumnSpan="2"></ContentControl>
                        <Image Name="BlizzardFound" Grid.Row="1" Grid.Column="1"></Image>
                    </Grid>
                    
                    <!-- Thunder -->
                    <Grid Margin="5" Grid.Row="1" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{DynamicResource Thunder}" Opacity="0.25" Name="Thunder" Grid.RowSpan="2" Grid.ColumnSpan="2"></ContentControl>
                        <Image Name="ThunderFound" Grid.Row="1" Grid.Column="1"></Image>
                    </Grid>
                    
                    <!-- Cure -->
                    <Grid Margin="5" Grid.Row="1" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{DynamicResource Cure}" Opacity="0.25" Name="Cure" Grid.RowSpan="2" Grid.ColumnSpan="2"></ContentControl>
                        <Image Name="CureFound" Grid.Row="1" Grid.Column="1"></Image>
                    </Grid>
                    
                    <!-- Reflect -->
                    <Grid Margin="5" Grid.Row="1" Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{DynamicResource Reflect}" Opacity="0.25" Name="Reflect" Grid.RowSpan="2" Grid.ColumnSpan="2"></ContentControl>
                        <Image Name="ReflectFound" Grid.Row="1" Grid.Column="1"></Image>
                    </Grid>
                    
                    <!-- Magnet -->
                    <Grid Margin="5" Grid.Row="1" Grid.Column="5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{DynamicResource Magnet}" Opacity="0.25" Name="Magnet" Grid.RowSpan="2" Grid.ColumnSpan="2"></ContentControl>
                        <Image Name="MagnetFound" Grid.Row="1" Grid.Column="1"></Image>
                    </Grid>
                </Grid>

                <!-- Drive Forms -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2.2*"/>
                        <RowDefinition Height="2.2*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Content="{DynamicResource Valor}" Opacity="0.25" Name="Valor" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2"></ContentControl>
                    <ContentControl Content="{DynamicResource Wisdom}" Opacity="0.25" Name="Wisdom" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2"></ContentControl>
                    <ContentControl Content="{DynamicResource Limit}" Opacity="0.25" Name="Limit" Grid.Row="1" Grid.RowSpan="2" Grid.Column="4" Grid.ColumnSpan="2"></ContentControl>
                    <ContentControl Content="{DynamicResource Master}" Opacity="0.25" Name="Master" Grid.Row="1" Grid.RowSpan="2" Grid.Column="6" Grid.ColumnSpan="2"></ContentControl>
                    <ContentControl Content="{DynamicResource Final}" Opacity="0.25" Name="Final" Grid.Row="1" Grid.RowSpan="2" Grid.Column="8" Grid.ColumnSpan="2"></ContentControl>

                    <Image Name="ValorLevel" Grid.Row="2" Grid.Column="1"/>
                    <Image Name="WisdomLevel" Grid.Row="2" Grid.Column="3"/>
                    <Image Name="LimitLevel" Grid.Row="2" Grid.Column="5"/>
                    <Image Name="MasterLevel" Grid.Row="2" Grid.Column="7"/>
                    <Image Name="FinalLevel" Grid.Row="2" Grid.Column="9"/>

                </Grid>

                <!-- Summons -->
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="4.4*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Content="{DynamicResource ChickenLittle}" Opacity="0.25" Name="Baseball" Grid.Row="1" Grid.Column="0"></ContentControl>
                    <ContentControl Content="{DynamicResource Genie}" Opacity="0.25" Name="Lamp" Grid.Row="1" Grid.Column="1"></ContentControl>
                    <ContentControl Content="{DynamicResource Stitch}" Opacity="0.25" Name="Ukulele" Grid.Row="1" Grid.Column="2"></ContentControl>
                    <ContentControl Content="{DynamicResource PeterPan}" Opacity="0.25" Name="Feather" Grid.Row="1" Grid.Column="3"></ContentControl>
                </Grid>
            </Grid>

            <Image Name="GoAFound" Visibility="Hidden"></Image>
            <Image Name="AtlanticaFound" Visibility="Hidden"></Image>
            <Image Name="AtlanticaTotal" Visibility="Hidden"></Image>
        </Grid>
    </Grid>

</Window>
